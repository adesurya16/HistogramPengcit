<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnTugas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas 1 - Histogram"
            android:onClick="gotoTugas1"/>

        <Button
            android:id="@+id/btnTugas2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas 2 - Batas"
            android:onClick="gotoTugas2"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

        <Button
            android:id="@+id/btnTugas3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas 3 - Specification"
            android:onClick="gotoTugas3"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

    </LinearLayout>
    
</RelativeLayout>