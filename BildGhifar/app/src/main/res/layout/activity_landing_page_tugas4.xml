<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tugas4ChainCode.LandingPageTugas4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAnalyzeFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="onClickAnalyzeFirst"
            android:text="Analyze First"/>

        <ProgressBar
            android:id="@+id/progress_bar_analyze"
            android:layout_marginTop="60dp"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTextPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"/>

                <ImageView
                    android:id="@+id/ivTextPhotoHasilBw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_launcher_round"/>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/linlaySeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBarThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ukuran_10dp"
                android:max="255"
                android:layout_weight="1"
                android:progress="128" />

            <TextView
                android:id="@+id/tvThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="128"
                android:layout_weight="9"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnChangeToBw"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="change image BW by threshold"
            android:onClick="changeImageBwByThreshold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="upload photo"
            android:visibility="gone"
            android:onClick="uploadPhoto"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnTebakAngka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tebak angka"
            android:visibility="gone"
            android:onClick="tebakPhoto"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvTextHasilIdentifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivTextPhotoHasilIdentifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>