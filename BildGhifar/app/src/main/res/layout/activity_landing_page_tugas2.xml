<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tugas2carigarismuka.LandingPageTugas2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/first_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Histogram Kelompok 8"
            android:textSize="20sp"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_photo_grayscale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tvThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekBarThreshold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/ukuran_10dp"
            android:max="255"
            android:progress="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCLickAnalyzeBitmap"
            android:text="Analyze" />

        <TextView
            android:id="@+id/titleFotoResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Gambar dan Histogram"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/iv_photo_hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/iv_photo_hasil_grayscale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/red_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/red_chart_hasil"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ukuran_2dp"
            android:background="@color/bluesky1"
            android:layout_marginTop="@dimen/ukuran_10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/green_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/green_chart_hasil"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ukuran_2dp"
            android:background="@color/bluesky1"
            android:layout_marginTop="@dimen/ukuran_10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/blue_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/blue_chart_hasil"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ukuran_2dp"
            android:background="@color/bluesky1"
            android:layout_marginTop="@dimen/ukuran_10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/gray_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/gray_chart_hasil"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/ukuran_10dp"/>

    </LinearLayout>

</ScrollView>